{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react-jsx",
    "sourceMap": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "declarationDir": "./dist",
    "moduleResolution": "node",
    "emitDeclarationOnly": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
